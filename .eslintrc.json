{
    "extends": [
        "react-app",
        "react-app/jest"
    ],
    "rules": {
        "react-hooks/exhaustive-deps": "warn",
        "no-console": [
            "warn",
            {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ],
        "jsx-a11y/anchor-is-valid": "warn"
    },
    "overrides": [
        {
            "files": [
                "**/*.test.js",
                "**/*.test.jsx"
            ],
            "env": {
                "jest": true
            }
        }
    ]
}